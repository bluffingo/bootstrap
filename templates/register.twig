{% set layout_template = current_theme == 'alpha2' ? '_layout.twig' : '_layout-login.twig' %}

{% extends layout_template %}

{% block title %}Register{% endblock %}

	{% block content %}
        <main class="form-signin">
            {% if error %}
                <div class="alert alert-warning" role="alert">{{ error }}</div>
            {% endif %}
            <div class="container">
            </div>
            <form method="post" name="registerForm" id="registerForm" action="/register">
                {% if current_theme == "classic" %}
                    <img class="mb-2" src="{{ logo }}" alt="{{ website_branding.name }}" width="90">
                    <h3 class="mb-4 text-white">{{ localize('register') }}</h3>
                {% else %}
                    <a href="/"><img class="mb-2" src="{{ logo }}" alt="{{ website_branding.name }}" width="90"></a>
                    <h1 class="mb-3 fs-3 text-white">{{ localize('register') }}</h1>
                {% endif %}
                <form method="POST">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-floating my-2">
                                <input type="email" name="email" class="form-control" id="floatingEmail"
                                        placeholder="">
                                <label for="floatingEmail">{{ localize('email_address') }}</label>
                            </div>
                            <div class="form-floating my-2">
                                <input type="text" name="username" class="form-control" id="floatingUsername"
                                        placeholder="" required>
                                <label for="floatingUsername">{{ localize('username') }}</label>
                            </div>
                            <div class="form-floating my-2">
                                <input type="password" name="pass1" class="form-control" id="floatingPass"
                                        placeholder="" required>
                                <label for="floatingPass">{{ localize('password') }}</label>
                            </div>
                            <div class="form-floating my-2">
                                <input type="password" name="pass2" class="form-control" id="floatingPass2"
                                        placeholder="" required>
                                <label for="floatingPass2">{{ localize('password_again') }}</label>
                            </div>
                            <div class="form-floating my-2">
                                <input type="date" name="birthdate" class="form-control" required/>
                                <label for="birthdate">{{ localize('birthdate') }}</label>
                            </div>
                            {% if captcha_public_token %}
                                <div class="my-2">
                                    <div class="h-captcha" data-sitekey="{{ captcha_public_token }}"></div>
                                </div>
                            {% endif %}
                            {% if current_theme == "classic" %}
                            <div class="d-flex gap-2 justify-content-between">
                                <input class="btn btn-lg btn-primary flex-grow-1" type="submit" value="Register"
                                        name="registersubmit">
                                <a class="btn btn-lg btn-secondary" href="/">Back</a>
                            </div>
                            {% else %}
                                <input class="btn btn-lg btn-primary w-100" type="submit" value="{{ localize('register')}}" name="registersubmit">
                                <div class="mt-3">{{ localize('register_discord_requirement', website_branding.name) }}</div>
                            {% endif %}
                        </div>
                    </div>
                    {% if current_theme == "classic" %}
                        <p class="mt-2 text-white"><b>You must be 13 years or older to register to
                                {{ website_branding.name }}.</b> <br>Account passwords are hashed with bcrypt.</p>
                        <p class="mt-5 mb-3 text-white">{{ localize('footer_copyright', ('now' | date('Y'))) }}.</p>
                    {% else %}
                        <p class="mt-3 text-white">{{ localize('footer_copyright', ('now' | date('Y'))) }}</p>
                    {% endif %}
                </form>
        </main>
        {% if hcaptcha_sitekey %}
            <script src='https://www.hCaptcha.com/1/api.js' async defer></script>
        {% endif %}
    {% endblock %}
