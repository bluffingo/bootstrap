{% extends "_layout-login.twig" %}

{% block title %}{{ localize('ban_title') }}{% endblock %}

{% block content %}
    <main class="form-signin">
        <div class="login-box">
            <a href="/"><img class="mb-2" src="{{ logo }}" alt="{{ website_branding.name }}" width="90"></a>
            <h1 class="mb-3 fs-3 text-white">{{ localize('ban_title') }}</h1>
            <div class="card">
                <div class="card-body text-start">
                    <p>{{ localize('ban_intro_1', user_data.name) }}</p>
                    <p>{{ localize('ban_intro_2', '/tos', '/guidelines') | raw }}</p>
                    <p>{{ localize('ban_filed_permanent', timestamp | format_date('long', 'long') ) }}</p>
                    <p>{{ localize('ban_evasion_warning') }}</p>
                    {#<p>Reason: {{ reason }}</p>#}
                    <a href="/logout" class="btn btn-lg btn-primary w-100">{{ localize('logout') }}</a>
                </div>
            </div>
        </div>
        <p class="mt-3 text-white">{{ localize('footer_copyright', ('now' | date('Y'))) }}</p>
    </div>
{% endblock %}
