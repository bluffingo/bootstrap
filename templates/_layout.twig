{% if is_chaziz_sb and not is_fulptube %}
    {% set logo = '/assets/sb_branding/bootstrap/logo.svg' %}
{% else %}
    {% set logo_suffix = current_theme == "dark" ? '-dark' : '' %}
    {% set logo_extension = website_branding.is_vector ? '.svg' : '.png' %}
    {% set logo_type = website_branding.use_wordmark ? 'logo-wordmark' : 'logo' %}

    {% set logo = website_branding.assets_location ~ '/' ~ logo_type ~ logo_suffix ~ logo_extension %}
{% endif %}

<!DOCTYPE html>
<html lang="{{ language_code }}" dir="ltr">
<head>
    <title>{% block title %}{% endblock %} - {{ website_branding.name }}</title>
    {{ include('/components/_html_head.twig') }}
</head>
<body>
{% if show_warning_banner %}
    <div class="alert alert-primary alert-fullscreen">
        {{ warning_banner_text | raw }}
    </div>
{% endif %}
{% if current_theme == "classic" %}
    {{ include('/components/_header_classic.twig') }}
{% else %}
    {{ include('/components/_header_default.twig') }}
{% endif %}
{% block precontent %}{% endblock %}
<div class="container">
    {% if session.notif_message %}
        <div class="alert alert-{{ session.notif_color }} alert-dismissible fade show" role="alert">
            {{ session.notif_message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{ remove_notification() }}
    {% endif %}
    {% block content %}{% endblock %}
</div>
{{ include('/components/_footer_default.twig') }}
{% block postcontent %}{% endblock %}
{% block scripts %}{% endblock %}
{% if is_debug %}
    <div class="offcanvas offcanvas-bottom text-center show" data-bs-scroll="true" data-bs-backdrop="false"
         style="visibility:visible;height:unset;">
        <div class="offcanvas-body py-1">{{ profiler_stats() }}</div>
    </div>
{% endif %}
</body>
</html>
