{% extends "_layout.twig" %}

{% block title %}{{ data.username }}{% endblock %}

	{% block head %}
        <script>
            user_id = '{{ data.id }}';
        </script>
    {% endblock %}

	{% block precontent %}
<style>
    .bg-custom-profile {
        background-color: {{ data.color }};
    }

    .bg-channel-background {
        margin-top: -24px;
        padding-bottom: 25px;
    }
</style>
        {% if current_theme != "alpha3" and current_theme != "alpha2" %}
            <div class="bg-channel-background">
                <div class="col-12 mb-2 mt-0">
                    <div class="p-1 bg-custom-profile text-white">
                        <div class="container py-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <img class="float-start rounded-circle me-3"
                                         src="{{ profile_picture(data.username) }}"
                                         width="150" alt="pfp">
                                    <h1 class="align-top fw-bold mb-0">{{ data.displayname }}</h1>
                                    <div class="fs-4">@{{ data.username }}</div>
                                    <p class="fs-6 text-break">{{ data.about }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}

    {% block content %}
    <div class="row">
        {% if edited %}
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    Your profile has been successfully updated.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        {% endif %}
        {% if current_theme == "alpha2" %}
            {{ include('/subpages/_profile_alpha2.twig') }}
        {% elseif current_theme == "alpha3" %}
            {{ include('/subpages/_profile_alpha3.twig') }}
        {% else %}
            {{ include('/subpages/_profile.twig') }}
        {% endif %}
    </div>
</div>
    {% endblock %}
