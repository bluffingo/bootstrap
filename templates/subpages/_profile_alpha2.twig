<div class="p-1 mb-4 col-md-6 col-lg-4 bg-dark rounded-3 text-white">
    <div class="container-fluid py-5">
        <div class="row">
            <div class="col text-center">
                <img src="{{ profile_picture(data.username) }}" width="128" alt="pfp">
                <h1 class="align-top fw-bold">{{ data.username }}</h1>
            </div>
        </div>
        <p class="col-md-8 fs-4">{{ data.about | markdown_user_written }}</p>
        <button class="btn btn-warning btn-lg" type="button">Subscribe</button>
        <button class="btn btn-secondary btn-lg" type="button">Friend</button>
    </div>
</div>
<div class="col-md-6 col-lg-8">
    <div class="card">
        <div class="card-body">
            <div class="caption">
                <h3>Most recent uploaded video</h3>
                {% for submission in data.submissions %}
                    {{ include('/components/videobox.twig') }}
                {% endfor %}
            </div>
        </div>
    </div>
</div>