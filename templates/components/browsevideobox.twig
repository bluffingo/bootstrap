<div class="card" style="margin-bottom:10px">
    <div class="card-body text-center">
        <div class="row"><a href="/view/{{ upload.id }}">
                <div class="col-lg-12" style="margin-bottom:15px">
                    <div class="img-thumbnail">
                        <img class="img-fluid"
                             src="{{ thumbnail(upload.id, upload.type, upload.flags.custom_thumbnail) }}">
                    </div>
                </div>
            </a>
            <div class="col-lg-12">
                <h4><a href="/view/{{ upload.id }}">{{ upload.title }}</a></h4>
                {# hack to prevent twig from outputing the number 1 #}
                {% if upload.views != 1 %}
                    {% set pluralViews = "s" %}
                {% endif %}
                <p>{{ user_link(upload.author) }} &bull; {{ upload.views }} view{{pluralViews}} &bull;
                    {{ upload.published | relative_time }}</p>
            </div>
        </div>
    </div>
</div>
