<nav id="navbar" class="navbar navbar-light bg-light navbar-static-top navbar-expand-md">
	<div class="container">
		<button class="btn btn-light-outline p-1 me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
			{{ icon('list', 24) }}
		</button>
		<a class="navbar-brand me-2" href="/"><img src="{{ logo }}" alt="{{ website_branding.name }}" height="32" class="d-inline-block"></a>
		<form class="d-flex" method="GET" action="search">
			<div class="input-group">
				<input name="query" class="form-control" type="search" placeholder="Search" aria-label="Search">
                <button type="submit" class="btn btn-light">{{ icon('search', 16 ) }}</button>
			</div>
		</form>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div id="navbarCollapse" class="collapse navbar-collapse flex-grow-1 justify-content-end">
			<ul class="navbar-nav">
            	{% if is_user_logged_in %}
					<div class="dropdown nav-item">
						<a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
							<img src="{{ profile_picture(user_data.name) }}" alt="{{ user_data.name }}" class="rounded-circle" width="24" height="24">
						</a>
						<ul class="dropdown-menu dropdown-menu-end" style="">
							{% for link in header_user_links() %}
								<a class="dropdown-item" href="{{ link.url }}">{{ link.name }}</a>
							{% endfor %}
                            <hr>
                            {% for link in header_user_account_links() %}
				                <a class="dropdown-item" href="{{ link.url }}">{{ link.username }}</a>
							{% endfor %}
                            <a class="dropdown-item" href="/login"><span><small>Add account</small></span></a>
						</ul>
					</div>
				{% else %}
					<div class="d-flex">
						<a href="/login" class="btn btn-primary me-md-1">{{ localize('login') }}</a>
						<a href="/register" class="btn btn-secondary">{{ localize('register') }}</a>
					</div>
				{% endif %}
			</ul>
		</div>
		<!--/.nav-collapse -->
	</div>
</nav>
<div class="mb-4">
	<nav class="py-1 bg-dark">
		<div class="container">
			<ul class="nav me-auto">
				<li class="nav-item">
					<a href="/" class="nav-link link-light px-2">
						{{ icon('house-door', 16) }}
						Home
					</a>
				</li>
				<li class="nav-item">
					<a href="/browse" class="nav-link link-light px-2">
						{{ icon('play-btn', 16) }}
						{{ localize('browse') }}
					</a>
				</li>
				<li class="nav-item">
					<a href="/users" class="nav-link link-light px-2">
						{{ icon('people', 16) }}
						Members
					</a>
				</li>
			</ul>
		</div>
	</nav>
</div>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
	{% if is_user_logged_in %}
		<div class="offcanvas-header">
			<h5 class="offcanvas-title" id="offcanvasNavbarLabel">
				Following
			</h5>
			<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			<ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
				{% for link in sidebar_following_users() %}
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="/user/{{ link.username }}">
							{{ link.username }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}
</div>