{% extends "_layout.twig" %}

{% block title %}Members{% endblock %}

	{% block content %}
        <h1>Members</h1>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        {% for user in users.users %}
                            <div class="d-flex align-items-center mb-3 gap-3">
                                <a href="/user/{{ user.info.username }}">
                                    <img src="{{ profile_picture(user.id) }}"
                                         alt="{{ user.info.username }}"
                                         class="rounded-circle img-fluid"
                                         width="64"
                                         height="64">
                                </a>
                                <div>
                                    <div class="fw-bold">{{ user_link(user) }}</div>
                                    <small class="text-muted">
                                        {{ user.uploads }} uploads â€¢ {{ user.journals }} journals
                                    </small>
                                </div>
                            </div>
                            {% if not loop.last %}<hr class="my-3">{% endif %}
                        {% else %}
                            <p>No members.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
