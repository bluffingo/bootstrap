{% extends "_layout.twig" %}

{% set level_titles = {
    4: localize('user_role_owner'),
    3: localize('user_role_administrator'),
    2: localize('user_role_moderator'),
} %}

{% block title %}{{ localize('staff') }}{% endblock %}

{% block content %}
    <h1>{{ localize('staff_title', website_branding.name) }}</h1>
    <div class="card">
        <div class="card-body">
            {% for user in staff|sort((a, b) => b.level <=> a.level) %}
                <div class="d-flex align-items-center gap-3">
                    <div class="flex-shrink-0">
                        <img
                            src="{{ profile_picture(user.info.username) }}"
                            alt="{{ user.info.username }}"
                            class="rounded-circle img-fluid"
                            width="64"
                            height="64">
                    </div>

                    <div class="flex-grow-1">
                        <h5 class="mb-1">
                            {{ user_link(user) }}
                        </h5>
                        <div class="text-muted small">
                            {{ level_titles[user.level]|default('Unknown') }}
                        </div>
                    </div>
                </div>
                {% if not loop.last %}<hr class="my-3">{% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}